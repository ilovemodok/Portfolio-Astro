---

// Makes titles unique for each page
const { pageTitle } = Astro.props;

//Sets up Image optimization
import { Image } from "astro:assets";

// Template Assets
import mainLogo from '../images/template/mainlogo.svg';
import menu from '../images/template/mobile-menu.svg';
import menuClose from '../images/template/mobile-menu-close.svg';

//CSS Styles
import '../styles/global.css';
import '../styles/style.css';
import '../styles/queries.css';

---

<html lang="en">
	<head>

    <!-- ***************
      METADATA
******************** -->

		<meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Need engaging print and web design for your business? Come check out the work of multimedia artist and designer Gary Wintle"
    />
    <meta
      name="keywords"
      content="Gary Wintle, HTML, CSS, JavaScript, Photoshop, freelancer, illustrator, book design, for hire, designer in Japan, web developer in Japan, UX artist"
    />
    <meta name="author" content="Gary Wintle" />

<!-- ***************
      BROWSER ICON STUFF
******************** -->

<!-- Browser Icon -->
<link rel="icon" href="/img/favicon-02.svg" type="image/svg" />

<!-- Apple Mobile Icon -->
    <link rel="apple-touch-icon" href="/img/icon-files/GW-logo-apple.png" />

<!-- Android Mobile Icon -->
    <link rel="manifest" href="manifest.webmanifest" />

<!-- Apple Top Bar Colour -->
    <meta name="theme-color" content="#12283a" />


<!-- ***************
      JAVASCRIPT
******************** -->

<!-- Astro -->
    <meta name="generator" content={Astro.generator} />

<!-- Lottie -->
    <script  src="https://unpkg.com/@lottiefiles/lottie-interactivity@latest/dist/lottie-interactivity.min.js"></script>

    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

    <script src="https://unpkg.com/@dotlottie/player-component@1.0.0/dist/dotlottie-player.js"></script>

    <script defer src="/js/lottie-tester.js"></script>

<!-- GSap -->
    <script
        defer
        src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"
      ></script>
      <script
        defer
        src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"
      ></script>
      <script
        defer
        src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/CustomEase.min.js"
      ></script>
      <script defer src="/js/gsap.js"></script>

<!-- Lightbox -->
    <link href="/lightbox/css/lightbox.css" rel="stylesheet" />

<!-- Font Stuff -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,500;0,600;0,700;0,900;1,400&display=swap"
      rel="stylesheet"
    />

<!-- Smooth Scrolling -->
    <script
      defer
      src="https://unpkg.com/smoothscroll-polyfill@0.4.4/dist/smoothscroll.min.js"
    ></script>

<!-- Generic -->
    <script src="../scripts/script.js"></script>






    


		
		<title>{pageTitle}</title>
	</head>
	<body>

		<div class="header-background">
      <header class="header nav-open//">
        <a href="https://garywintle.com/"
          ><Image
          loading="eager"
            class="main-logo"
            alt="Gary Wintle Logo"
            src={mainLogo}
        /></a>
        <nav class="main-nav">
          <ul class="main-nav-list">
            <li><a class="main-nav-link" href="#link-services">Services</a></li>
            <li><a class="main-nav-link" href="#link-port">Portfolio</a></li>
            <li><a class="main-nav-link" href="#link-about">About</a></li>
            <li>
              <a
                class="main-nav-link nav-cta hero-talk drop-shadow"
                href="#link-lets-talk"
                >Let's Talk!</a
              >
            </li>
          </ul>
        </nav>
        <button class="btn-mobile-nav">
            <!-- "menu-icon" was name instead of id before -->
          <Image
            class="icon-mobile-nav"
          name="menu-icon" 
            src={menu}
            alt="open mobile menu"
          />
           <!-- "close-icon" was name instead of id before -->
          <Image
            class="icon-mobile-nav"
            name="close-icon"
            src={menuClose}
            alt="close mobile menu"
          />
        </button>
      </header>
    </div>

    <!-- Back to Top Button -->

    <div class="back-to-top">
      <a href="#">
        <!-- <lottieBackToTop src="/animations/hero-animation.json"
        autoplay="visible"
        alt="Back to the top of the page"
        /> -->
        <!-- <LottieAnimation src="../images/homepage/back-to-top.json" autoplay="visible" /> -->
        <!-- <lottie-player
          id="back-to-top-lottie"
          src="../images/homepage/gwhero-test-05.json"
          background="transparent"
          speed="2"
          alt="Back to the top of the page"
        ></lottie-player> -->
      </a>
    </div>

    <!-- START OF CONTENT -->


	<slot />

 <!-- END OF CONTENT -->
    <!-- *****Footer***** -->
		<footer class="footer-container">
      <span class="footer-text"
        >Â© <span class="year">0000</span> Gary Wintle Inc. Illustrated,
        designed, animated, and coded by hand. All rights reserved.</span
      >
    </footer>
	</body>
</html>